---
import { SITE_TITLE, SITE_DESCRIPTION,intro,btn,cover } from '../config';
---
<div class="col-md-6 p-3 p-md-5">
<div class="p-3 p-md-5">
<h1><strong><a href="/" title={SITE_TITLE}>{SITE_TITLE}</a></strong></h1>
<h2>{SITE_DESCRIPTION}</h2>
<p class="lead">{intro}</p>
<p><a href="/website" class="btn btn-outline-dark">{btn}</a></p>
</div>
</div>
<div class="col-md-6 p-3 p-md-5">
<img class="img-fluid rounded" loading="lazy" width="100%" height="100%" 
alt={SITE_TITLE} src={cover}/>
</div>
